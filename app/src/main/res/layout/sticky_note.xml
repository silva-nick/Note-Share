<?xml version="1.0" encoding="utf-8"?>
<!-- StickyNote layout to be placed in the CardView -->
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    android:id="@+id/sticky_note">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/sticky_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/sticky_top"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/sticky_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sticky_top"
            android:background="@color/colorSticky"/>

        <ImageView
            android:id="@+id/sticky_bot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sticky_text"
            android:src="@drawable/sticky_bottom"
            android:scaleType="centerCrop"/>
    </LinearLayout>

</android.support.v7.widget.CardView>